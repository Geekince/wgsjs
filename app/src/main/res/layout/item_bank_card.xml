<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <com.shehuan.niv.NiceImageView
        android:id="@+id/temp_iv"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_bank_card_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="37dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/temp_iv"
        app:layout_constraintEnd_toEndOf="@id/temp_iv"
        app:layout_constraintStart_toStartOf="@id/temp_iv">

        <TextView
            android:id="@+id/tvCard1"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="0000"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvTempCard1"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="20dp"
            android:text="***"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvTempCard2"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="20dp"
            android:text="****"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvCard2"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="20dp"
            android:text="0000"
            android:textColor="#ffffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="17dp"
        android:text="平安银行"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/temp_iv"
        app:layout_constraintTop_toTopOf="@+id/temp_iv" />

    <TextView
        android:id="@+id/realName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="张三"
        android:textColor="#ffffffff"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/bankName"
        app:layout_constraintStart_toEndOf="@+id/bankName"
        app:layout_constraintTop_toTopOf="@+id/bankName" />

    <TextView
        android:id="@+id/txDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_confirm"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:paddingEnd="5dp"
        android:paddingBottom="2dp"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/temp_iv"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>