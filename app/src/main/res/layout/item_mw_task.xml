<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#2C2C37"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@mipmap/icon_tiyanrenwu" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:text="**任务"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/buyPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0/0"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/title" />


        <TextView
            android:id="@+id/temp_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="领取所需:"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />


        <TextView
            android:id="@+id/needNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0.00枚令牌"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/temp_tv_2"
            app:layout_constraintStart_toEndOf="@id/temp_tv_2" />


        <TextView
            android:id="@+id/temp_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="完成收益:"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@id/temp_tv_2" />


        <TextView
            android:id="@+id/haveGetNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0.00枚令牌"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/temp_tv_3"
            app:layout_constraintStart_toEndOf="@id/temp_tv_3" />

        <TextView
            android:id="@+id/temp_tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="完成方式:"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@id/temp_tv_3" />


        <TextView
            android:id="@+id/taskDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="每天观看5分钟视频"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/temp_tv_4"
            app:layout_constraintStart_toEndOf="@+id/temp_tv_4"
            app:layout_constraintTop_toBottomOf="@id/temp_tv_3" />

        <TextView
            android:id="@+id/btnBuy"
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_mw_get"
            android:gravity="center"
            android:text="领取"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/iv_img"
            app:layout_constraintTop_toBottomOf="@id/iv_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>